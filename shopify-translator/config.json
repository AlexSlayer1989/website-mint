{
  "name": "Shopify Translation Plugin",
  "version": "1.0.0",
  "description": "Advanced Shopify translation plugin with OpenAI integration and widget support",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "serve": "npx http-server -p 8000"
  },
  "features": {
    "openai_optimization": {
      "batch_translation": true,
      "token_tracking": true,
      "rate_limiting": true,
      "max_batch_size": 10,
      "max_tokens_per_request": 3000
    },
    "field_selection": {
      "strict_validation": true,
      "checkbox_compliance": true,
      "pre_translation_validation": true
    },
    "widget_support": {
      "auto_detection": true,
      "frontend_text_extraction": true,
      "implementation_code_generation": true,
      "supported_types": [
        "review-widgets",
        "chat-widgets", 
        "popup-widgets",
        "social-widgets",
        "announcement-bars",
        "countdown-timers",
        "currency-converters",
        "size-guides",
        "search-widgets",
        "recommendation-widgets"
      ]
    },
    "content_types": {
      "products": {
        "fields": ["title", "description", "tags", "meta_title", "meta_description", "variant_title"]
      },
      "collections": {
        "fields": ["title", "description", "meta_title", "meta_description"]
      },
      "pages": {
        "fields": ["title", "content", "meta_title", "meta_description"]
      }
    }
  },
  "api_requirements": {
    "shopify": {
      "required_scopes": ["read_products", "write_products", "read_content", "write_content", "read_themes"],
      "api_version": "2023-10"
    },
    "openai": {
      "model": "gpt-3.5-turbo",
      "required_permissions": ["chat_completions"]
    }
  },
  "supported_languages": {
    "es": "Spanish",
    "fr": "French", 
    "de": "German",
    "it": "Italian",
    "pt": "Portuguese",
    "ru": "Russian",
    "zh": "Chinese",
    "ja": "Japanese"
  },
  "browser_compatibility": {
    "chrome": "60+",
    "firefox": "55+",
    "safari": "12+",
    "edge": "79+"
  },
  "quality_assurance": {
    "backward_compatibility": true,
    "comprehensive_logging": true,
    "error_handling": true,
    "token_optimization": true,
    "field_validation": true
  }
}